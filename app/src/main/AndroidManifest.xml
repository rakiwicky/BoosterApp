<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rw.boosterapp">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <supports-screens android:anyDensity="true" />

    <application
        android:name=".InitApp"
        android:allowBackup="true"
        android:icon="@drawable/logo_small"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:exported="true"
            android:name=".view.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.QuestionnaireActivity"
            android:label="@string/title_activity_questionnaire"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.TotalScoreActivity"
            android:label="@string/title_activity_total_score"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.UserDetailActivity"
            android:label="@string/title_activity_user_detail"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.EndActivity"
            android:label="@string/title_activity_end"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".view.InvestorTypeActivity"
            android:label="@string/title_activity_end"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>